{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "headers": [
        {
            "source": "/index.html",
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; connect-src 'self' wss://ws.coincap.io https://api.coincap.io; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"
                }
            ]
        }
    ]
}
